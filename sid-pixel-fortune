function generateFortune(type = 'daily') {
  const fortuneText = document.getElementById('fortune-text');
  const chimeSound = document.getElementById('chime-sound');
  
  fortuneText.classList.add('shake');
  
  setTimeout(() => {
    const randomFortune = fortunes[type][Math.floor(Math.random() * fortunes[type].length)];
    fortuneText.innerHTML = randomFortune;
    fortuneText.classList.remove('shake');
    chimeSound.play();
  }, 500);
}

function shareFortune() {
  const fortune = document.getElementById('fortune-text').innerText;
  const shareText = encodeURIComponent(`Check out my pixel fortune: "${fortune}" - via Pixel Fortune Generator`);
  const shareUrl = `https://twitter.com/intent/tweet?text=${shareText}`;
  window.open(shareUrl, '_blank');
}

function playSound(url) {
  const audio = new Audio(url);
  audio.play();
}

let backgroundMusic = document.getElementById('background-music');

function toggleBackgroundMusic() {
  if (backgroundMusic.paused) {
    backgroundMusic.play();
  } else {
    backgroundMusic.pause();
  }
}

document.body.addEventListener('click', () => {
  if (backgroundMusic.paused) {
    backgroundMusic.play();
  }
});

// Generate initial fortune
generateFortune();

// Add pixel art elements
const pixelArt = `
<div class="fixed top-0 left-0 w-full h-full pointer-events-none z-10">
  <div class="absolute top-4 left-4 w-8 h-8 bg-retro-accent pixel-fade"></div>
  <div class="absolute top-4 right-4 w-8 h-8 bg-retro-primary pixel-fade"></div>
  <div class="absolute bottom-4 left-4 w-8 h-8 bg-retro-secondary pixel-fade"></div>
  <div class="absolute bottom-4 right-4 w-8 h-8 bg-retro-dark pixel-fade"></div>
</div>
`;
document.body.insertAdjacentHTML('beforeend', pixelArt);

// Add interactivity
document.querySelectorAll('.retro-button').forEach(button => {
  button.addEventListener('mouseover', () => {
    playSound('https://freesound.org/data/previews/151/151022_2703579-lq.mp3');
  });
});

let fortuneCount = 0;
const generateButton = document.getElementById('generateButton');
generateButton.addEventListener('click', () => {
  fortuneCount++;
  if (fortuneCount % 5 === 0) {
    alert("You've generated 5 fortunes! Here's a bonus tip: The more fortunes you generate, the luckier you get!");
  }
});
</script>
